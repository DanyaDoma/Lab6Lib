{ 
    "name": "lull/pizza-store", 
    "description": "Pizza Store Library", 
    "type": "library", 
    "require": { 
        "php": "^8.0" 
    }, 
    "require-dev": { 
        "phpstan/phpstan": "^2.1", 
        "squizlabs/php_codesniffer": "^4.0" 
    }, 
    "autoload": { 
        "psr-4": { 
            "Lull\\PizzaStore\\": "src/" 
        } 
    }, 
    "autoload-dev": { 
        "psr-4": { 
            "Lull\\PizzaStore\\Tests\\": "tests/" 
        } 
    }, 
    "scripts": { 
        "phpstan": "phpstan analyse", 
        "phpcs": "phpcs --standard=PSR12 src/", 
        "phpcbf": "phpcbf --standard=PSR12 src/" 
    } 
}
